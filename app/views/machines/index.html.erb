<h1>Liste des machines</h1>
    <h2><%= link_to 'Recherche', new_machine_path %></h2>

<table border= '1'>
  <tr>
    <th>Nom machine</th>
    <th>Ip machine</th>
    <th>Id salle machine</th>
    <th>Description machine</th>
    <th>Date de creation </th>
    <th>Etat machine</th>
    <th>Etat service machine</th>
    <th>Afficher</th>
    <th>Modifier</th>
    <th>Supprimer</th>
  </tr>

<% @machines.each do |machine| %>
  <tr>
    <td><%= machine.nom_machine %></td>
    <td><%= machine.ip_machine %></td>
    <td><%= machine.id_salle_machine %></td>
    <td><%= machine.description_machine %></td>
    <td><%= machine.date_crea_machine %></td>
    <td><%= machine.etat_machine %></td>
    <td><%= machine.etat_service_machine %></td>
    <td><%= link_to 'Afficher', machine %></td>
    <td><%= link_to 'Modifier', edit_machine_path(machine) %></td>
    <td><%= link_to 'Supprimer', machine, confirm: 'Confirmation !!', method: :delete %></td>
  </tr>
<% end %>
</table>

