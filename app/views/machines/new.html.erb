    	<option id="#{<%=salle.id_salle%>}"><%= salle.id_salle%></option>
    	<% end %>
    </select>
    <%= f.text_field :id_salle_machine %>
  </div>
  <div class="field">
    <%= f.label :description_machine %><br />
    <%= f.text_field :description_machine %>
  </div>
  <div class="field">
    <%= f.label :date_crea_machine %><br />
    <%= f.text_field :date_crea_machine %>
  </div>
  <div class="field">
    <%= f.label :etat_machine %><br />
    <%= f.text_field :etat_machine %>
  </div>
  <div class="field">
    <%= f.label :etat_service_machine %><br />
    <%= f.text_field :etat_service_machine %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


