<!DOCTYPE html>
<html>

	<head>

		<title><%= titre %></title>
		<%= csrf_meta_tags %>
		<%= stylesheet_link_tag    "application" %>
		<%= javascript_include_tag "application" %>	

		<%= javascript_include_tag "jquery-1.7.1.min" %>
		<%= javascript_include_tag "jquery-ui-1.8.17.custom.min" %>
		<%= stylesheet_link_tag "smoothness/jquery-ui-1.8.17.custom" %>

		<%= javascript_include_tag "iphone-style-checkboxes" %>
		<%= stylesheet_link_tag "iphone" %>

		<%= javascript_include_tag "dataTables" %>
		<%= stylesheet_link_tag "dataTables" %>

		<%= stylesheet_link_tag "style" %>

		<%= javascript_include_tag 'dhtmlx/dhtmlxcommon.js' %>
        <%= javascript_include_tag 'dhtmlx/dhtmlxgrid.js' %>
        <%= javascript_include_tag 'dhtmlx/dhtmlxgridcell.js' %>
        <%= javascript_include_tag 'dhtmlx/dhtmlxdataprocessor.js' %>
		<%= javascript_include_tag 'dhtmlx/dhtmlxgrid_filter.js' %>
		<%= javascript_include_tag 'dhtmlx/dhtmlxchart.js' %>
		<%= stylesheet_link_tag 'dhtmlx/dhtmlxchart.css' %>
        <%= stylesheet_link_tag 'dhtmlx/dhtmlxgrid.css' %>
        <%= stylesheet_link_tag 'dhtmlx/skins/dhtmlxgrid_dhx_skyblue.css' %>

		
	</head>

	<body>

		<%= render 'layouts/header' %>

		<div id="psg" style="display:none;position:center;background-color:#FFFFAA;" />
			Nouvelle recrue pour un euro!<br />
			<img     src="http://localhost:3000/goal.bmp"
			alt="pour cacher par exemple"
			onclick="document.getElementById('psg').style.display='none';" />
		</div>
		<div id="om" style="display:none;position:center;background-color:#FFFFAA;" />
			GOAAAAAAAAAAAAAAAAAAAALLLLLLLLLLLLLLLLLLLLLLLLLLLLLL!!!!!!!!!!!!!!!!<br />
			<img     src="http://localhost:3000/om.bmp"
			alt="pour cacher par exemple"
			onclick="document.getElementById('om').style.display='none';" />
		</div>
		
		<div id="main">

			<div id="content">

				<div id="flash">
					<% flash.each do |key, value| %>
						<p class="<%= key %>"><%= value %></p>
					<% end %>
				</div>
			
				
				<%= yield %>

			</div>

		</div>

		<%= render 'layouts/footer' %>

	</body>
</html>
